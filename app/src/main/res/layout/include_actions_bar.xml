<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llTitleBar"
    android:orientation="vertical">

    <include layout="@layout/include_status_bar" />

    <RelativeLayout
        android:id="@+id/rlTitleBar"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tvTitleBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/navi_back"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_FF333333"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/ivRightBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:src="@mipmap/navi_back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvRightBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_FF333333"
                android:textSize="14dp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>